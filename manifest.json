{
    "manifest_version": 2,
    "name": "My Extension",
    "version": "0.1",
    "description": "- ニコ動での動画上広告を削除するscript",

    "content_scripts": [
        {
            "matches": ["https://www.nicovideo.jp/watch/*"],
            "css": [],
            "js": ["nicovideo.js"]
        },
        {
            "matches": ["https://www.dropbox.com/robots.txt"],
            "js": ["oauth2/oauth2_inject.js"],
            "run_at": "document_start"
        }
    ],

    "permissions": [
    ],

    "browser_action": {
        "default_title": "A",
        "default_popup": "popup.html"
    }
}
