{
    "manifest_version": 2,
    "name": "Something Extension",
    "version": "1.6",
    "description": "色々やる個人的なExtenstion。",

    "content_scripts": [
        {
            "matches": ["https://www.nicovideo.jp/watch/*"],
            "js": ["nicovideo.js"]
        }
    ],
    "icons": {
        "16": "image/16x16.png",
        "32": "image/32x32.png",
        "48": "image/48x48.png",
        "128": "image/128x128.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "contextMenus"
    ],

    "browser_action": {
        "default_title": "popup",
        "default_popup": "popup.html",
        "default_icon": {
            "16": "image/16x16.png",
            "32": "image/32x32.png",
            "48": "image/48x48.png",
            "128": "image/128x128.png"
        }
    },

    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },

    "commands": {
    }

}
